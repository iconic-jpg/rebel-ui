{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",              // <-- must match moduleResolution
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "verbatimModuleSyntax": true,

    /* Required for JSX/React */
    "jsx": "react-jsx",
    "allowJs": true
  },
  "include": ["src"]
}
